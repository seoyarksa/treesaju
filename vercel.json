{
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node@2.0.0"
    }
  },

  "crons": [
    { "path": "/api/payment/manage-subscription?action=charge&attempt=1", "schedule": "0 0 * * *" }, 
    { "path": "/api/payment/manage-subscription?action=charge&attempt=2", "schedule": "0 1 * * *" },  
    { "path": "/api/payment/manage-subscription?action=charge&attempt=3", "schedule": "0 2 * * *" },  
    { "path": "/api/payment/manage-subscription?action=autoCancel",       "schedule": "5 3 * * *" }   
  ],
    "headers": [
    {
      "source": "/legal/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, s-maxage=0, must-revalidate" }
      ]
    }
  ]
}