{
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node@2.0.0"
    }
  },

  "crons": [
     { "path": "/api/payment/manage-subscription?action=apply_scheduled_changes", "schedule": "*/10 * * * *" },
    {
      "path": "/api/payment/manage-subscription?action=charge",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/payment/manage-subscription?action=autoCancel",
      "schedule": "5 0 * * *"
    }
  ],
    "headers": [
    {
      "source": "/legal/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, s-maxage=0, must-revalidate" }
      ]
    }
  ]
}