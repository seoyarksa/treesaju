{
  "version": 2,
  "functions": {
    "api/*.js": {
      "includeFiles": "utils/**"
    }
  },
  "rewrites": [
    { "source": "/api/send-otp",   "destination": "/api/phone?action=send" },
    { "source": "/api/verify-otp", "destination": "/api/phone?action=verify" },
    { "source": "/api/send-sms",   "destination": "/api/phone?action=send&via=sms" },
    { "source": "/api/verify-sms", "destination": "/api/phone?action=verify&via=sms" }
  ]
}
